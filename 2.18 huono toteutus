import axios from 'axios'
import { useState, useEffect } from 'react';

/*const Find = ({ input, handleInput }) => (
    <form>
      <p>Find countries <input value={input} onChange={handleInput}/></p>
    </form>
)*/

const Country = ({ country, pic }) => {
  console.log('Country-object in Country-component: ', country)
  console.log('Type of picture variable in Picture-component: ', typeof pic)
  if (country !== null){
  return (
    <div>
      <h1>{country.name.common}</h1>
      <p>Capital {country.capital}</p> 
      <p>Area {country.area}</p>
      <h3>Languages: </h3>
      <ul>
        {Object.values(country.languages).map(lang => <li key={lang}>{lang}</li>)}
      </ul>
      <img src={pic} alt="flag" border="1px black" width="30%" height="30%"/>
    </div>
  )}
}

const App = () => {

const [input, setInput] = useState('')
const [searchInput, setSearchInput] = useState('')
const [country, setCountry] = useState(null)
const [picture, setPicture] = useState(null)
const [countries, setCountries] = useState([])

useEffect (() => {
  axios
    .get(`https://studies.cs.helsinki.fi/restcountries/api/all`)
    .then(response => {
      console.log('axios.get response: ', response.data)
      const maat = response.data.map(maa => maa.name.common)
      console.log(maat)
      setCountries(maat)
    })
}, [])

useEffect(() => {
  if (searchInput) {
  axios
    .get(`https://studies.cs.helsinki.fi/restcountries/api/name/${searchInput}`)
    .then(response => {
      console.log('axios.get response: ', response.data)
      setCountry(response.data)
      setPicture(response.data.flags.png)
    })
  }
}, [searchInput])

const handleInput = (event) => {
  console.log(event.target.value)
  setInput(event.target.value)
}

const ShowCountries = ({ input, countries}) => {
  const countriesToShow = countries
  .filter(country => country.toLowerCase().startsWith(input.toLowerCase()))

  if (countriesToShow.length > 10) {
    setCountry(null)
    return (
      <p>Too many matches, improve filter</p>
    )
  }
  if (countriesToShow.length === 1) {
    setSearchInput(countriesToShow[0])
    return (null)
  }
  return (
    countriesToShow.map(maa => <p key={maa}>{maa}</p>)
  )
}

  return (
    <div>
      <div>
        <form>
          Find countries: <input value={input} onChange={handleInput}/>
        </form>
        <ShowCountries input={input} countries={countries} />
      </div>
      <Country country={country} pic={picture}/>
    </div>
  )
}

export default App;



